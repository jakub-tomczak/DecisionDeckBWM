<?xml version='1.0' encoding='utf-8'?>
<program_description>
    <program provider="PUT"
     name="BWM"
     displayName="Best worst method"
     version="1.0" />
    <documentation>
        <description>This module contains `best worst method` solver.</description>
        <contact>Jakub Tomczak (jakub.tomczak@live.com)</contact>
        <url></url>
        <reference></reference>
    </documentation>
    <parameters>
		<input id="criteria" name="criteria" displayName="Description of criteria">
			<documentation>
				<description>A list of criteria.</description>
			</documentation>
			<xmcda tag="criteria"/>
		</input>

		<input id="bestToOthersPreferences" name="bestPreferencesOfCriteria" displayName="Preferences" isoptional="1">
			<documentation>
				<description>
                    Preferences of the best criterion over all the other criteria. Preferences are defined as natural number between 1 and 9.
                    A_b set, a_bb = 1. 
                </description>
			</documentation>
			<xmcda tag="criteriaValues"/>
		</input>

		<input id="othersToWorstPreferences" name="worstPreferencesOfCriteria" displayName="Preferences" isoptional="1">
			<documentation>
				<description>
                    Preferences of all the criteria over the worst criterion. Preferences are defined as natural number between 1 and 9.
                    A_w set, a_ww = 1.
                </description>
			</documentation>
			<xmcda tag="criteriaValues"/>
		</input>		
        
        <output id="criteriaWeights" name="criteriaWeights" displayName="criteriaWeights">
			<documentation>
				<description>
                    Calculated criteria weights.
                </description>
			</documentation>
			<xmcda tag="criteriaValues"/>
		</output>
        
		<output id="messages" name="messages" displayName="messages">
			<documentation>
				<description>A list of messages generated by the algorithm.</description>
			</documentation>
			<xmcda tag="methodMessages" />
		</output>
    </parameters>
</program_description>